{
  "app-id": "us.materialio.app",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "23.08",
  "command": "run.sh",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--share=network"
  ],
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.node20"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/node20/bin",
    "env": {
      "XDG_CACHE_HOME": "/run/build/materialious-app/flatpak-node/cache",
      "npm_config_cache": "/run/build/materialious-app/flatpak-node/npm-cache",
      "npm_config_nodedir": "/usr/lib/sdk/node20",
      "npm_config_offline": true
    }
  },
  "modules": [
    {
      "name": "materialious-app",
      "buildsystem": "simple",
      "build-commands": [
        "cd ./main && npm install --offline",
        "cd ./main && npm run build",
        "cd ./main && npx cap sync @capacitor-community/electron",
        "cd ./main/electron && python patch_capacitor_plugin.py",
        "cd ./main/electron && npm install --offline",
        "cd ./main/electron && npm run electron:pack",
        "cp -a ./main/electron/dist/linux-unpacked /app/main",
        "install -Dm755 -t /app/bin ./run.sh"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../materialious",
          "dest": "main"
        },
        {
          "type": "script",
          "dest-filename": "run.sh",
          "commands": [
            "zypak-wrapper.sh /app/main/materialious \"$@\""
          ]
        },
        {
          "type": "archive",
          "url": "https://github.com/electron/electron/releases/download/v33.0.2/electron-v33.0.2-linux-x64.zip",
          "sha256": "933dc1eae3f2db67912b3ab056fd15a7ca3e1328fe8dd6a1f5266c5a063b1121",
          "dest": "main/electron/.electron-cache"
        },
        "generated-sources.json"
      ]
    }
  ]
}